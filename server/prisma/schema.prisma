generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String @id @default(uuid())
  email       String @unique
  name        String
  role        String
  firebaseUid String @unique
  contactNumber String? 

  listings      FoodListing[]
  reservations  Reservation[]
  notifications Notification[]   
  messagesSent  Message[]        
}

model FoodListing {
  id                String    @id @default(uuid())
  foodName          String
  quantity          Int
  originalPrice     Float
  address           String
  latitude          Float
  longitude         Float
  expiresAt         DateTime
  status            String    @default("available")
  createdAt         DateTime  @default(now())
  allowFree         Boolean   @default(true)
  minimumPrice      Float     @default(0)
  storageCondition  String    @default("room_temp")
  pickupWindowStart DateTime?
  pickupWindowEnd   DateTime?
  foodCategory      String    @default("other")
  imageUrl          String?

  providerId   String
  provider     User          @relation(fields: [providerId], references: [id])
  reservations Reservation[]
}

model Reservation {
  id           String    @id @default(uuid())
  reservedAt   DateTime  @default(now())
  status       String    @default("pending")
  // "pending" | "accepted" | "declined" | "confirmed" | "cancelled"

  receiverNote  String?
  providerNote  String?

  acceptedAt    DateTime?
  declinedAt    DateTime?
  confirmedAt   DateTime?
  cancelledAt   DateTime?

  receiverId String
  receiver   User        @relation(fields: [receiverId], references: [id])

  listingId  String      @unique
  listing    FoodListing @relation(fields: [listingId], references: [id])

  messages   Message[]   
}

// ─────────────────────────────────────────
// NOTIFICATION TABLE
// In-app bell notifications for both roles
// ─────────────────────────────────────────
model Notification {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  read      Boolean  @default(false)

  // What kind of notification
  // "new_reservation" | "reservation_accepted" | "reservation_declined"
  // "new_message" | "pickup_confirmed" | "reservation_cancelled"
  type      String

  
  message   String

  // Optional: link to navigate to when clicked
  link      String?

  userId    String
  user      User   @relation(fields: [userId], references: [id])
}

model Message {
  id             String      @id @default(uuid())
  createdAt      DateTime    @default(now())
  text           String

  senderId       String
  sender         User        @relation(fields: [senderId], references: [id])

  reservationId  String
  reservation    Reservation @relation(fields: [reservationId], references: [id])
}